<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.LedControllerV2.StripButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:importantForAccessibility">no</item>
        <item name="android:textColor">@color/grey_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="strokeWidth">3dp</item>
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.LedControllerV2.Button.Rounded
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.LedControllerV2.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">14dp</item>
    </style>

    <style name="Widget.LedControllerV2.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/grey_light</item>
    </style>

    <style name="Widget.LedControllerV2.BottomNavBar" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/green</item>
    </style>

    <style name="Widget.LedControllerV2.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/green</item>
        <item name="titleTextAppearance">@style/TextAppearance.LedControllerV2.Toolbar</item>
    </style>

    <style name="TextAppearance.LedControllerV2.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>