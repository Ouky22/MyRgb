<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.myrgb.ledcontroller.feature.rgbcontroller.ControllerViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.rgbcontroller.ControllerFragment">

        <ImageView
            android:id="@+id/iv_rgb_circle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="32dp"
            android:importantForAccessibility="no"
            app:layout_constraintDimensionRatio="H,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_rgb_circle" />

        <ImageView
            android:id="@+id/iv_bulb"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:importantForAccessibility="no"
            android:tint="@{viewModel.currentlySelectedColor.toRgbInt()}"
            android:tintMode="multiply"
            app:layout_constraintBottom_toBottomOf="@id/iv_rgb_circle"
            app:layout_constraintEnd_toEndOf="@id/iv_rgb_circle"
            app:layout_constraintStart_toStartOf="@id/iv_rgb_circle"
            app:layout_constraintTop_toTopOf="@id/iv_rgb_circle"
            app:srcCompat="@drawable/ic_bulb"
            tools:ignore="UseAppTint" />

        <Button
            android:id="@+id/btn_bulb"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="160dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="160dp"
            android:background="@color/invisible"
            android:importantForAccessibility="no"
            android:onClick="@{() -> viewModel.onRgbBulbButtonClick()}"
            app:layout_constraintBottom_toBottomOf="@id/iv_rgb_circle"
            app:layout_constraintEnd_toEndOf="@id/iv_rgb_circle"
            app:layout_constraintStart_toStartOf="@id/iv_rgb_circle"
            app:layout_constraintTop_toTopOf="@+id/iv_rgb_circle" />

        <ImageView
            android:id="@+id/iv_brightness_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:importantForAccessibility="no"
            app:layout_constraintBottom_toBottomOf="@id/seekBar_brightness"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/seekBar_brightness"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/ic_brightness" />

        <SeekBar
            android:id="@+id/seekBar_brightness"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:max="@{viewModel.maxBrightness / 10}"
            android:onProgressChanged="@{(s,p,f) -> viewModel.onBrightnessSeekBarProgressChanged(p, f)}"
            android:progress="@{viewModel.currentlySelectedBrightness / 10}"
            android:progressDrawable="@drawable/custom_seekbar"
            android:thumb="@drawable/seekbar_thumb"
            app:layout_constraintBottom_toTopOf="@id/scroll_view_buttons"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_brightness_icon"
            app:layout_constraintTop_toBottomOf="@+id/iv_rgb_circle" />

        <HorizontalScrollView
            android:id="@+id/scroll_view_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seekBar_brightness">

            <LinearLayout
                android:id="@+id/linear_layout_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>